{
  "name": "wabmeta-backend",
  "version": "1.0.0",
  "description": "WhatsApp SaaS API Backend",
  "main": "dist/server.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "dev": "nodemon",
    "build": "npx prisma generate && tsc",
    "start": "node dist/server.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate deploy",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio",
    "render-build": "npm install --include=dev && npx prisma generate && npx prisma migrate deploy && tsc",
    "migrate:encrypt": "ts-node src/scripts/encryptTokens.ts",
    "migrate:encrypt:dry": "ts-node src/scripts/encryptTokens.ts --dry-run",
    "generate:key": "node -e \"console.log('ENCRYPTION_KEY=' + require('crypto').randomBytes(32).toString('hex'))\""
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^3.3.0",
    "@prisma/client": "^5.22.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.10",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/nodemailer": "^6.4.16",
    "axios": "^1.13.4",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "crypto-js": "^4.2.0",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.6.1",
    "express": "^4.22.1",
    "express-rate-limit": "^8.2.1",
    "google-auth-library": "^10.5.0",
    "helmet": "^7.2.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^6.9.15",
    "pg": "^8.18.0",
    "razorpay": "^2.9.6",
    "resend": "^6.9.2",
    "socket.io": "^4.8.3",
    "uuid": "^13.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^5.0.6",
    "@types/express-rate-limit": "^5.1.3",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.2.3",
    "@types/uuid": "^10.0.0",
    "nodemon": "^3.1.7",
    "prisma": "^5.22.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}